# Claude API
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Model routing (empty = disabled, all calls use CLAUDE_MODEL)
# Set to a cheaper model to route simple queries there
# CLAUDE_MODEL_SIMPLE=claude-haiku-4-5-20251001

# Telegram
TELEGRAM_BOT_TOKEN=

# Tradera (register at Tradera Developer Program)
TRADERA_APP_ID=
TRADERA_APP_KEY=
# Public key for token login URL (from Tradera Developer Program)
TRADERA_PUBLIC_KEY=
TRADERA_SANDBOX=true
# Tradera seller authorization (from consent flow)
TRADERA_USER_ID=
TRADERA_USER_TOKEN=

# Blocket (no configuration needed â€” works without auth)
# BLOCKET_BEARER_TOKEN=  # deprecated, no longer used

# PostNord (shipping labels)
POSTNORD_API_KEY=
POSTNORD_SANDBOX=true
POSTNORD_SENDER_NAME=
POSTNORD_SENDER_STREET=
POSTNORD_SENDER_POSTAL_CODE=
POSTNORD_SENDER_CITY=
POSTNORD_SENDER_COUNTRY_CODE=SE
POSTNORD_SENDER_PHONE=
POSTNORD_SENDER_EMAIL=

# Shipping label export path (optional, has default)
# LABEL_EXPORT_PATH=data/labels

# Order polling interval in minutes
ORDER_POLL_INTERVAL_MINUTES=30

# Scheduled jobs (hour of day, 0-23)
SCOUT_DIGEST_HOUR=8
MARKETING_REFRESH_HOUR=7

# Conversation history
MAX_HISTORY_MESSAGES=20
CONVERSATION_TIMEOUT_MINUTES=60

# Extended thinking (0 = disabled, >= 1024 to enable)
# CLAUDE_THINKING_BUDGET=0
# CLAUDE_MAX_TOKENS=16000

# Context compaction (summarize old messages instead of dropping them)
# CLAUDE_MODEL_COMPACT=claude-haiku-3-5-20241022
# COMPACT_THRESHOLD=20
# COMPACT_KEEP_RECENT=6

# Database (SQLite path, relative to working directory)
DATABASE_PATH=data/storebot.db

# Voucher PDF export path (optional, has default)
# VOUCHER_EXPORT_PATH=data/vouchers

# Access control (comma-separated Telegram chat IDs, empty = all allowed)
# ALLOWED_CHAT_IDS=

# Rate limiting
RATE_LIMIT_MESSAGES=30
RATE_LIMIT_WINDOW_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_JSON=true
# LOG_FILE=
